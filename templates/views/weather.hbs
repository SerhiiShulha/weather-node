<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Weather</title>

    <script src="/app.js"></script>
</head>
<body>
{{> header }}

<nav>
    <ul>
        {{#each places}}
            <li style="padding: 5px 10px; margin-right: 10px">
                <a href="/weather/{{this}}" style="color: palevioletred">{{this}}</a>
            </li>
        {{/each}}
    </ul>
</nav>

{{> footer}}
</body>
</html>
